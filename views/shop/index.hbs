<div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div id="success" class="alert alert-success{{#if noError}} hidden {{/if}}">
        {{successMessage}}
      </div>
    </div>
</div>
{{# each products}}
<div class="row">
  {{# each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="...">
      <div class="caption clearfix">
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p>
          <div class="pull-left price">{{this.price}}$</div>
          <a href="/add-to-cart/{{ this.id }}" class="btn btn-success pull-right" role="button">Add to Cart</a></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
